{
    "name": "genec-vscode",
    "displayName": "GenEC Refactoring",
    "description": "AI-powered Extract Class refactoring for Java with 7-layer verification",
    "version": "0.0.50",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "genec-sidebar",
                    "title": "GenEC",
                    "icon": "resources/genec-icon.svg"
                }
            ]
        },
        "views": {
            "genec-sidebar": [
                {
                    "type": "webview",
                    "id": "genec.refactorView",
                    "name": "Refactoring",
                    "icon": "resources/genec-icon.svg",
                    "contextualTitle": "GenEC Refactoring"
                }
            ]
        },
        "commands": [
            {
                "command": "genec.refactorClass",
                "title": "GenEC: Refactor Current Class"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "genec.refactorClass",
                    "group": "refactor",
                    "when": "resourceLangId == java"
                }
            ]
        },
        "configuration": {
            "title": "GenEC",
            "properties": {
                "genec.pythonPath": {
                    "type": "string",
                    "default": "python3",
                    "description": "Path to Python interpreter with genec installed"
                },
                "genec.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Anthropic API Key (optional - can also use .env file in workspace root)"
                },
                "genec.autoApply": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically apply the best refactoring suggestion"
                },
                "genec.clustering.minClusterSize": {
                    "type": "number",
                    "default": 2,
                    "description": "Minimum number of methods in a cluster"
                },
                "genec.clustering.maxClusterSize": {
                    "type": "number",
                    "default": 20,
                    "description": "Maximum number of methods in a cluster"
                },
                "genec.clustering.minCohesion": {
                    "type": "number",
                    "default": 0.1,
                    "description": "Minimum cohesion score for a cluster"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "18.x",
        "@types/vscode": "^1.80.0",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "vis-network": "^10.0.2",
        "ws": "^8.16.0"
    }
}